<ScrollView 
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".JoinActivity" >

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="23dp"
         android:layout_marginTop="30dp"
         android:adjustViewBounds="true"
         android:maxHeight="50dip"
         android:maxWidth="50dip"
         android:src="@drawable/icon_13" />

     <Button
         android:id="@+id/ImageButton3"
         android:layout_width="95dp"
         android:layout_height="36dp"
         android:layout_alignLeft="@+id/edtText4"
         android:layout_alignRight="@+id/edtText4"
         android:layout_below="@+id/edtText4"
         android:layout_marginTop="42dp"
         android:background="@drawable/btn_selector"
         android:textColor="#ffffff"
         android:text="JOIN" />

     <EditText
         android:id="@+id/edtText3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/edtText5"
         android:layout_below="@+id/edtText5"
         android:layout_marginTop="40dp"
         android:ems="10"
         android:password="true"
         android:hint="PASSWORD" />

     <EditText
         android:id="@+id/edtText4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/edtText3"
         android:layout_below="@+id/edtText3"
         android:layout_marginTop="42dp"
         android:ems="10"
         android:password="true"
         android:hint="PASSWORD" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView3"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@+id/imageView3"
         android:text="JOIN"
         android:textColor="#8313d2"
         android:textSize="15pt" />

     <EditText
         android:id="@+id/edtText5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imageView3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="63dp"
         android:ems="10"
         android:hint="ID" />

</RelativeLayout>
</ScrollView>