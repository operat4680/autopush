<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e3e2d2"
    android:orientation="horizontal"
    tools:context=".LoginActivity" >

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/imageView3"
         android:layout_marginLeft="65dp"
         android:text="JOIN"
         android:textColor="#261468"
         android:textSize="10pt" />

     <EditText
         android:id="@+id/edtText5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/imageView3"
         android:layout_below="@+id/imageView3"
         android:layout_marginTop="38dp"
         android:ems="10"
         android:hint="NAME" >

         <requestFocus />
     </EditText>

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="23dp"
         android:layout_marginTop="30dp"
         android:adjustViewBounds="true"
         android:maxHeight="50px"
         android:maxWidth="50px"
         android:src="@drawable/icon_13" />

     <ImageButton
         android:id="@+id/ImageButton3"
         android:layout_width="95dp"
         android:layout_height="36dp"
         android:layout_below="@+id/edtText4"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="42dp"
         android:background="@drawable/icon_12" />

     <EditText
         android:id="@+id/edtText3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/edtText5"
         android:layout_below="@+id/edtText5"
         android:layout_marginTop="40dp"
         android:ems="10"
         android:hint="EMAIL(ID)" />

     <EditText
         android:id="@+id/edtText4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/edtText3"
         android:layout_below="@+id/edtText3"
         android:layout_marginTop="42dp"
         android:ems="10"
         android:hint="PASSWORD" />

</RelativeLayout>